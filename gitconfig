[core]
	filemode = false
	editor = code

[color]
	ui = auto
	branch = auto
	diff = auto
	interactive = auto
	status = auto

[color "status"]
	added = green
	changed = yellow 
	untracked = magenta
	deleted = red

[alias]
	hist = "!f() { commits=${1:--20};  git log $commits --branches=* --decorate --oneline --graph --remotes; }; f"
	lola = log --graph --decorate --pretty=oneline --abbrev-commit --all

